{
  "expo": {
    "name": "LocalMarket",
    "slug": "localmarket",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "localmarket",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.localmarket.app",
      "associatedDomains": [
        "applinks:seo-performance-10.preview.emergentagent.com"
      ],
      "infoPlist": {
        "NSCameraUsageDescription": "Take photos to add to your listings",
        "NSPhotoLibraryUsageDescription": "Select photos to add to your listings",
        "NSLocationWhenInUseUsageDescription": "Find listings near your location"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#2E7D32"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.localmarket.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "seo-performance-10.preview.emergentagent.com",
              "pathPrefix": "/api/l/"
            },
            {
              "scheme": "https",
              "host": "seo-performance-10.preview.emergentagent.com",
              "pathPrefix": "/listing/"
            },
            {
              "scheme": "https",
              "host": "seo-performance-10.preview.emergentagent.com",
              "pathPrefix": "/profile/"
            },
            {
              "scheme": "https",
              "host": "seo-performance-10.preview.emergentagent.com",
              "pathPrefix": "/category/"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#2E7D32"
        }
      ],
      "expo-secure-store",
      [
        "expo-image-picker",
        {
          "photosPermission": "Select photos to add to your listings"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
