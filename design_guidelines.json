  "image_urls": {
    "badges": [
      "https://images.unsplash.com/photo-1625468743270-9c3c5b27933b?crop=entropy&cs=srgb&fm=jpg&q=85",
      "https://images.unsplash.com/photo-1633176640669-44bd6adaa662?crop=entropy&cs=srgb&fm=jpg&q=85",
      "https://images.unsplash.com/photo-1643616802160-bcca2171c24a?crop=entropy&cs=srgb&fm=jpg&q=85"
